{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "types": [
      "@overwolf/types"
    ],
    "rootDirs": [
      "./src"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules"
  ]
}
